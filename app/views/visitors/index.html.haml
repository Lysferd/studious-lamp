- content_for :title do
  - (t "headers.#{action_name}") + ' ' + (t "models.#{controller_name}", count: 2)

#paper{ style:table_width(4) }
  %table
    - unless @visitors.count.zero?
      %thead
        %tr
          %th= t "shows.name"
          %th= t "shows.credential"
          %th= t "shows.schedules"
          %th= t "shows.options"

      %tbody.data
        - @visitors.each do |v|
          - str = I18n.l v.schedule.datetime, format: :long
          %tr
            %td= v.name
            %td= v.credential
            %td= link_to str, v.schedule
            %td
              = link_to 'Detalhes', v
              = link_to 'Editar', edit_visitor_path(v)
              = link_to 'Apagar', v, method: :delete, data: { confirm: 'VocÃª tem certeza?' }

%br

= link_to 'Novo visitante', new_visitor_path

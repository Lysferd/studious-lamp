%h1 Listing schedules

%table(border)
  %thead
    %tr
      %th Datetime
      %th Host
      %th Visitors
      %th Approved
      %th Options

  %tbody
    - @schedules.each do |schedule|
      %tr
        %td= schedule.datetime
        %td= link_to schedule.host.name, schedule.host
        %td
          - schedule.visitors.each do |v|
            = link_to v.name, v
        %td= schedule.approved
        %td
          = link_to 'Show', schedule
          = link_to 'Edit', edit_schedule_path(schedule)
          = link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Schedule', new_schedule_path
